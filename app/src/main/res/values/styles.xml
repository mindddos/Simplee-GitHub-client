<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>

    </style>

    <style name="ProgressDarkAccent" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorGray</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textColorHint">@color/textColorGray</item>
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="android:background">@color/colorGray</item>
        <item name="android:queryBackground">@android:color/white</item>
    </style>
</resources>
