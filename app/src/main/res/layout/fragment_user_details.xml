<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:clickable="true"
                android:background="@color/black_transparent"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent"
                android:focusable="true">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_margin="50dp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_width="match_parent"
                android:padding="20dp"
                android:background="@android:color/white"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="100dp"
                    android:layout_alignParentTop="true"
                    tools:src="@drawable/ic_photo_placeholder"
                    android:layout_centerHorizontal="true"
                    android:layout_height="100dp"/>

            <ProgressBar
                    android:layout_centerInParent="true"
                    android:theme="@style/ProgressDarkAccent"
                    android:id="@+id/progress_bar"
                    android:layout_width="@dimen/progress_bar_size"
                    android:layout_height="@dimen/progress_bar_size"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/black"
                    tools:text="Name"
                    android:id="@+id/tv_name"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/iv_avatar"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_below="@id/tv_name"
                    tools:text="Username"
                    android:id="@+id/tv_username"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/tv_username"
                    android:gravity="center"
                    android:id="@+id/location"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="wrap_content"
                        android:id="@+id/iv_location"
                        app:srcCompat="@drawable/ic_location"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tv_location"
                        tools:text="Ukraine"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_bio"
                    tools:text="Some bio text about user"
                    android:textStyle="italic"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/location"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_repos_count"
                    android:text="@string/repos_count"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/black"
                    android:layout_below="@id/tv_bio"
                    android:layout_height="wrap_content"/>


            <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_followers"
                    android:text="@string/followers"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/black"
                    android:layout_below="@id/tv_repos_count"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_following"
                    android:text="@string/following"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/black"
                    android:layout_below="@id/tv_followers"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>